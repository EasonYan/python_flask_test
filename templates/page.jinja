{%- macro render_pagination(pagination, endpoint) %}
<div>
    <a href="{{ url_for(endpoint,page=1)}}">第一页</a>
    {%- if pagination.has_prev %}
    <a href="{{ url_for(endpoint, page=pagination.prev_num) }}">上一页</a>
    {%- endif %}
    {%- for page in pagination.iter_pages(left_edge=2, left_current=2, right_current=3, right_edge=2) %}
    {%- if page %}
    {%- if page != pagination.page %}
    <a href="{{ url_for(endpoint, page=page) }}">{{ page }}</a>
    {%- else %}
    <a href="#"><strong>{{ page }}</strong></a>
    {%- endif %}
    {%- else %}
    <span class=ellipsis>…</span>
    {%- endif %}
    {%- endfor %}
    {%- if pagination.has_next %}
    <a href="{{ url_for(endpoint, page=pagination.next_num) }}">下一页</a>
    {%- endif %}
    <a href="{{ url_for(endpoint,page=pagination.pages)}}">最后一页</a>
</div>
{%- endmacro %}